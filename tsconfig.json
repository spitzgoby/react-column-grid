    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
