{
    "name": "react-column-grid",
    "version": "1.2.0",
    "description": "A simple grid layout system for React using CSS Grid Layout.",
    "keywords": [
        "react",
        "css",
        "grid",
        "layout",
        "column"
    ],
    "main": "dist/index.js",
    "files": [
        "dist",
        "LICENSE",
        "package.json",
        "README.md"
    ],
    "sideEffects": [
        "*.s[ac]ss"
    ],
    "scripts": {
        "build": "webpack --config ./config/webpack.config.prod.js",
        "clean": "rm -rf node_modules lib",
        "start": "cross-env NODE_ENV=development webpack serve --config ./config/webpack.config.dev.js",
        "test": "jest",
        "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watch",
        "prepare": "husky install"
    },
    "jest": {
        "moduleNameMapper": {
            "^.+\\.(css|less|scss)$": "babel-jest"
        },
        "testEnvironment": "jsdom"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/spitzgoby/react-column-grid.git"
    },
    "author": "Tom Leu",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/spitzgoby/react-column-grid/issues"
    },
    "homepage": "https://github.com/spitzgoby/react-column-grid#readme",
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@babel/node": "^7.16.0",
        "@babel/preset-env": "^7.16.0",
        "@babel/preset-react": "^7.16.0",
        "@babel/preset-typescript": "^7.18.6",
        "@testing-library/react": "^13.4.0",
        "babel-jest": "^29.4.2",
        "babel-loader": "^8.2.3",
        "classnames": "^2.3.1",
        "cross-env": "^7.0.3",
        "css-loader": "^6.5.0",
        "eslint": "^8.5.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^25.3.2",
        "eslint-plugin-react": "^7.28.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": ">=6",
        "jest": "^29.4.2",
        "jest-environment-jsdom": "^29.4.2",
        "jsdom": "^18.0.1",
        "jsdom-global": "^3.0.2",
        "lint-staged": ">=10",
        "prettier": "^2.5.1",
        "prop-types": "^15.8.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-syntax-highlighter": "^15.4.5",
        "sass": "^1.43.4",
        "sass-loader": "^12.3.0",
        "style-loader": "^3.3.1",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.5",
        "webpack": "^5.61.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.4.0"
    },
    "peerDependencies": {
        "classnames": "^2.3.1",
        "prop-types": "^15.7.2",
        "react": "^16.8.6 || ^17.0.0 || ^18.0.0",
        "react-dom": "^16.8.6 || ^17.0.0 || ^18.0.0"
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix",
        "*.{js,css,md}": "prettier --write"
    }
}
